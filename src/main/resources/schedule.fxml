<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ScheduleController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="NEVER">
         <children>
            <JFXTextField />
            <Label text="Reserve a Room">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <JFXButton fx:id="homeBtn" onAction="#showHome" text="Home" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <JFXListView fx:id="reservableList" minWidth="10.0" prefWidth="200.0" />
            <VBox alignment="TOP_CENTER" minWidth="10.0" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Date and Time" />
                  <JFXDatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="144.0" />
                  <JFXTimePicker fx:id="startTimePicker" />
                  <JFXTimePicker fx:id="endTimePicker" />
                  <Label fx:id="errorLbl" text="Error" wrapText="true" />
               </children>
            </VBox>
            <VBox minWidth="10.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Schedule" />
                  <ScrollPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <content>
                        <HBox prefHeight="100.0">
                           <children>
                              <VBox fx:id="schedule" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="NEVER" />
                              <VBox fx:id="checks" prefHeight="200.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="timeLbl" text="Times" />
                  <JFXTextField fx:id="eventName" promptText="event name" />
                  <JFXTextField fx:id="employeeID" promptText="employee id number" />
                  <JFXComboBox fx:id="privacyLvlBox" />
                  <JFXButton fx:id="makeReservationBtn" onAction="#makeReservation" text="Make Reservation" />
                  <Label fx:id="confErrorLbl" text="confError" wrapText="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
